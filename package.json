{
  "name": "nuedocs2pdfs",
  "version": "1.0.0",
  "description": "Produces .epub and other formats from nuejs.org/docs/",
  "author": "Paul Whittemore <dev@appurist.com>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "clean": "cmd /c \"rmdir /s /q pdfs html markdown 2>nul || exit 0\"",

    "fetch-md": "bun fetch-md.js",
    "fetch-html": "bun fetch-html.js",
    "fetch-pdf": "bun fetch-pdf.js",

    "fetch": "bun fetch-md.js",
    "build": "bun build --compile ./fetch-md.js --outfile fetch-md",

    "epub": "pandoc markdown/chapter-*.md -o learning-nue.epub -t epub --metadata-file=metadata.yml --css=epub-styles.css --epub-cover-image=cover.png --toc --toc-depth=2 --split-level=1 --epub-title-page=false",
    "epub-html": "pandoc html/chapter-*.html -o learning-nue-html.epub -t epub --metadata-file=metadata.yml --css=epub-styles.css --epub-cover-image=cover.png --toc --toc-depth=2 --split-level=1 --epub-title-page=false",
    "html": "pandoc markdown/chapter-*.md -o learning-nue.html --metadata-file=metadata.yml --css=html-styles.css --toc --toc-depth=2 --standalone --embed-resources && bun fix-links.js learning-nue.html",

    "book": "bun run fetch && bun run epub",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "puppeteer": "^24.25.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
